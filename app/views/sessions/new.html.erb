<% provide(:title, 'Login') %>
<div id="login">
<h1>Log in</h1>
<div class="row1">
  <div class="col-md6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit "Log in", class: "btn btnLogin" %>
  <% end %>
    </div>
  </div>
</div>
